{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2018"
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "types/**/*.ts",
    "middleware.ts",
    "next.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".next/**",
    "coverage/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
